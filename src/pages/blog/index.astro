---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
);
---
<Layout title="Cloudstrap-mastodon Blog" description="Demonstration pages to inspire your creative writing." ogPic="https://huxley.cloud/arctic-fox.jpg">
  <div class="text-body px-2 py-2 text-left">
  <div class="py-2">
		<h1 class="display-5 fw-bold text-body text-center">Cloudstrap-mastodon Blog</h1>
    <div class="mx-auto">
			<section>
        { posts.map((post) => (
          <div class="card w-75 my-5 mx-auto">
            <a href={`/blog/${post.slug}/`}>
              <img src={post.data.heroImage} class="bd-placeholder-img card-img-top rounded-top" aria-label="Click to view the Blog Post" alt="blog post" />
            </a>
            <div class="card-body">
              <h5 class="card-title">{post.data.title}</h5>
              <p class="card-text">{post.data.description}</p>
              <a href={`/blog/${post.slug}/`} class="btn btn-secondary">Read more ...</a>
            </div>
            <div class="card-footer text-sm-end">
              <FormattedDate date={post.data.pubDate} />
            </div>
          </div>
        ))
      }
			</section>
		</div>
	</div>
